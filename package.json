{
  "name": "slack-channel-grouping",
  "version": "0.0.0",
  "description": "Grouping Slack channels by prefix",
  "main": "",
  "scripts": {
    "dev": "webextension-toolbox dev",
    "build": "webextension-toolbox build",
    "build-all": "npm run build chrome && npm run build firefox && npm run build edge",
    "lint": "npm run lint-biome && npm run lint-secretlint",
    "lint-biome": "biome check --write",
    "lint-secretlint": "secretlint \"**/*\" --secretlintignore .gitignore",
    "test": "vitest --dom",
    "supported-browsers": "npx browserslist",
    "archive": "git archive HEAD -o storage/source.zip"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/yamadashy/slack-channels-grouping.git"
  },
  "keywords": [
    "chrome",
    "extension",
    "firefox",
    "addon",
    "slack",
    "channel",
    "grouping"
  ],
  "author": "yamadashy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yamadashy/slack-channels-grouping/issues"
  },
  "dependencies": {
    "core-js": "3.45.1",
    "eventemitter3": "5.0.1",
    "jquery": "3.7.1",
    "loglevel": "^1.9.2",
    "requestidlecallback-polyfill": "1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@biomejs/biome": "^1.9.4",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.4",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.10.0",
    "@types/chrome": "^0.1.22",
    "@types/core-js": "2.5.8",
    "@types/jquery": "^3.5.33",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "@webextension-toolbox/webextension-toolbox": "^7.1.1",
    "babel-loader": "^10.0.0",
    "globals": "^16.4.0",
    "happy-dom": "^19.0.2",
    "secretlint": "^11.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ]
    ],
    "plugins": [
      "@babel/proposal-class-properties",
      "@babel/proposal-object-rest-spread"
    ]
  },
  "browserslist": [
    "last 2 versions, not dead, > 0.2%"
  ],
  "engines": {
    "node": ">=24.0.1"
  }
}
